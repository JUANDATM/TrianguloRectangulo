<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="A"
            android:layout_width="43dp"
            android:layout_height="42dp"
            android:id="@+id/btnA" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/etA" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="64dp"
            android:onClick="calculaA"/>
    <EditText
            android:layout_width="58dp"
            android:layout_height="46dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/etA" android:layout_marginTop="192dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="64dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <EditText
            android:layout_width="72dp"
            android:layout_height="51dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/etC"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp" android:layout_marginTop="192dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="C"
            android:layout_width="50dp"
            android:layout_height="41dp"
            android:id="@+id/btnC" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/etC" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/btnA"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.907" android:onClick="calculaC"/>
    <Button
            android:text="B"
            android:layout_width="47dp"
            android:layout_height="42dp"
            android:id="@+id/btnB" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/etB" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:onClick="calculaB"/>
    <EditText
            android:layout_width="65dp"
            android:layout_height="46dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/etB" android:layout_marginTop="348dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="Resultados"
            android:layout_width="203dp"
            android:layout_height="49dp"
            android:id="@+id/btnResultado"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/btnB" android:onClick="EnviarRes"/>
    <ImageView
            android:layout_width="146dp"
            android:layout_height="160dp" app:srcCompat="@drawable/triangulo"
            android:id="@+id/imageView10" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.578"
            app:layout_constraintVertical_bias="0.29"/>
</androidx.constraintlayout.widget.ConstraintLayout>